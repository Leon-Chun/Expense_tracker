<form class="row g-3 mt-3">
  <ul class="list-group col-md-6 m-auto">
    <div>
      <h5 class="m-2">*必填欄位</h5>
      <h2 class="text-center">請輸入你的支出</h2>
    </div>
    <li class="list-group-item">
      <div class="row">
        <label for="inputName" class="col-sm-2 col-form-label">名稱*：</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" id="inputName" required>
        </div>
      </div>
    </li>
    <li class="list-group-item">
      <div class="row">
        <label for="inputData" class="col-sm-2 col-form-label">日期*：</label>
        <div class="col-sm-10">
          <input type="date" class="form-control" id="inputData" required>
        </div>
      </div>
    </li>
    <li class="list-group-item">
      <div class="dropdown d-flex">
        <label for="inputCategory" class="col-sm-2 col-form-label">類別*：</label>
        <select class="form-select p-2 flex-grow-1" aria-label="inputCategory" name="inputCategory" id="inputCategory" required>
          <option selected disabled value="">選擇類別</option>
          <option value="1">家居物業</option>
          <option value="2">交通出行</option>
          <option value="3">休閒娛樂</option>
          <option value="4">餐飲食品</option>
          <option value="5">其他</option>
        </select>
      </div>
    </li>
    <li class="list-group-item">
      <div class="row">
        <label for="inputMoney" class="col-sm-2 col-form-label">金額*：</label>
        <div class="col-sm-10">
          <input type="number" class="form-control" id="inputMoney" placeholder="請輸入數字..." required>
        </div>
      </div>
    </li>
    <div class="row mt-3">
      <a href="/todos/new" class="btn btn-primary mb-3 col-md-4 m-auto">新增支出</a>
    </div>
  </ul>
</form>
